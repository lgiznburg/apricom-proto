<html xmlns="http://www.w3.org/1999/xhtml" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
<t:content>
    <t:form t:id="SpecialStateForm" validate="isSpecialState" class="form-horizontal">
            <div class="form-group">
            <div class="col">
                <t:checkbox t:id="isSpecialState" value="isSpecialState" t:mixins="triggerfragment" fragment="disableDocumentScanZone"/>
                <t:label for="isSpecialState"/>
            </div>
        </div>

        <t:formfragment t:id="disableDocumentScanZone" visible="isSpecialState">
            <div class="form-group">
                <div class="col-sm-2">
                    <t:if test="fileAttached">
                        ${state.document.file.fileName}
                    </t:if>
                </div>
                <div class="col-sm-4"><t:label for="documentScan"/>*</div>
                <div class="col-sm-6"><t:upload value="documentScan" t:id="documentScan"/></div>
            </div>
        </t:formfragment>


        <div class="form-group">
            <div class="col-sm-offset-2 co-s-10">
                <t:eventlink event="previousStep" context="stepName" class="btn btn-default">${message:back}</t:eventlink>
                <t:submit class="btn btn-primary" value="${message:save-continue}"/>
<!--                <t:eventlink event="cancel" class="btn btn-default">${message:cancel}</t:eventlink>-->
            </div>
        </div>
    </t:form>
</t:content>
</html>