<html t:type="layout" t:pageTitle="Создание заявки"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
<body>
    <t:unless test="wizardState?.editMode">
        <div>
            <t:loop source="allSteps" value="wizardStep">

                <t:if test="isOnStep(wizardStep)">
                    <span class="bg-success">${stepName}</span>
                    <p:else>
                        <t:eventlink event="selectStep" context="wizardStep.ordinal()">
                            <span>${stepName}</span>
                        </t:eventlink>
                    </p:else>
                </t:if>
                <t:if test="!stepIsLast(wizardStep)"> -> </t:if>
            </t:loop>
        </div>
    </t:unless>

    <t:if test="isOnStep('PERSON_INFO')">
        <t:wizard.personinfo.personinfoedit entrant="wizardState.entrant"/>
    </t:if>
    <t:if test="isOnStep('EDUCATION_INFO')">
        <t:wizard.educationinfo.educationinfoedit entrant="wizardState.entrant" helper="wizardState.helper"/>
    </t:if>
    <t:if test="isOnStep('SPECIAL_RIGHTS_INFO')">
        <t:wizard.personinfo.specialstateedit entrant="wizardState.entrant"/>
    </t:if>
    <t:if test="isOnStep('CAMPAIGNS_AND_SPECIALITIES')">
        <t:wizard.speciality.campaignselect entrant="wizardState.entrant" programs="wizardState.selectedPrograms" campaigns="wizardState.selectedCampaigns"/>
    </t:if>
    <t:if test="isOnStep('COMPETITIONS_AND_EXAMS')">
        <t:wizard.speciality.specialityselect entrant="wizardState.entrant" programs="wizardState.selectedPrograms"/>
    </t:if>

    <t:if test="wizardState.editMode">
        <div class="row text-right">
        <t:pagelink page="requests/browseentrant" context="wizardState.entrant" class="btn btn-success">
            ${message:back-to-browser}
        </t:pagelink>
        </div>
    </t:if>
  </body>
</html>